<%- include("partials/header.ejs") %>
<div class="flex justify-center items-center w-full mt-8">

  <!--year search for beers-->
  <div class="lg:w-[50%] sm:w-[80%] md:w-[70%] bg-blue-500">
    <form action="/search-by-year" id="year-form" class="form" method="POST">
        <select name="year" class="form-select overflow-auto">
          <option value="" data-display="Select">Year</option>
          <option value="2008">2008</option>
          <option value="2009">2009</option>
          <option value="2010">2010</option>
          <option value="2011">2011</option>
          <option value="2012">2012</option>
          <option value="2013">2013</option>
          <option value="2014">2014</option>
          <option value="2015">2015</option>
          <option value="2016">2016</option>
          <option value="2017">2017</option>
          <option value="2018">2018</option>
          <option value="2019">2019</option>
          <option value="2020">2020</option>
          <option value="2021">2021</option>
          <option value="2022">2022</option>
          <option value="2023">2023</option>
          <option value="2024">2024</option>
        </select>
        <button type="submit">Search</button>
      </form>

      <!--Random beer button -->
        <div class="lg:w-[50%] sm:w-[80%] md:w-[70%] border-solid mt-10">
          <button class="btn btn-outline">
            <a href="/random">Random Beer</a>
          </button>
        </div>

      <!-- Search for food pairing -->
      <div class="lg:w-[50%] sm:w-[80%] md:w-[70%] border-solid bg-yellow-600 mt-8">
        <form action="/search-by-food" id="food-form" method="POST">
          <input type="text" placeholder="Search Food Pairings" name="search" value="" class="input input-bordered w-full max-w-xs">
          <button type="submit">Search</button>
      </form>
      </div>

       <!-- Search for beer by name -->
       <div class="lg:w-[50%] sm:w-[80%] md:w-[70%] border-solid bg-yellow-600 mt-8">
        <form action="/search-by-name" id="name" method="POST">
          <input type="text" placeholder="Search beers by name" name="search" value="" class="input input-bordered w-full max-w-xs">
          <button type="submit">Search</button>
      </form>
      </div>

  </div>
</div>
<%- include("partials/footer.ejs") %>